rule "4kW Monitoring"
when
	Item ConsumoIstantaneoCasa changed
then
	if (ConsumoIstantaneoCasa.state > 4000) {
        ConsumptionAlarm.sendCommand(ON)
	}

    if (ConsumoIstantaneoCasa.state > 2000) {
        ConsumptionAlarm.sendCommand(OFF)
	}
end


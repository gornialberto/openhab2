rule "4kW Monitoring"
when
	Item ConsumoIstantaneoCasa changed
then
	if (ConsumoIstantaneoCasa.state > 4000) & (ConsumptionAlarm.state = OFF) {
        postUpdate.ConsumptionAlarm(ON)
	}

    if (ConsumoIstantaneoCasa.state > 2000) & (ConsumptionAlarm.state = ON) {
        postUpdate.ConsumptionAlarm(OFF)
	}
end

